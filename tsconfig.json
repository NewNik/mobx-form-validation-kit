{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "esModuleInterop": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "useDefineForClassFields": true,
    "noFallthroughCasesInSwitch": true,
    "rootDirs": ["src", "tests"],
    "outDir": "dist"
  },
  "typedocOptions":{
    "mode": "modules",
    "out": "docs"
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
